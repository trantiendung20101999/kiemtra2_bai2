<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lich thi"
        android:gravity="center"
        android:textSize="40dp">
    </TextView>

    <EditText
        android:id="@+id/edId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_marginTop="50dp"
        android:hint="Id "
        android:paddingLeft="10dp"
        android:clickable="false"
        android:paddingRight="10dp"
        ></EditText>

    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edId"
        android:layout_marginTop="50dp"
        android:hint="Tên mon hoc "
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></EditText>


    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Giờ thi : "
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        ></TextView>

    <Button
        android:id="@+id/btnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edName"
        app:layout_constraintLeft_toRightOf="@id/txtDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Select Time"
        ></Button>


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTime"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ngày Thi: "
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        ></TextView>

    <Button
        android:id="@+id/btnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTime"
        app:layout_constraintLeft_toRightOf="@id/txtDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Select Date"
        ></Button>
    <CheckBox
        app:layout_constraintTop_toBottomOf="@id/txtDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cb"
        android:text="Thi viết ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>
    <Button
        android:id="@+id/btnDell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Dell"
        ></Button>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb"
        app:layout_constraintLeft_toRightOf="@id/btnDell"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Update"
        ></Button>



</androidx.constraintlayout.widget.ConstraintLayout>